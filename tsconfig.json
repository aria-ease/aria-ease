{
    "compilerOptions": {
      "target": "esnext",
      "lib": ["dom", "dom.iterable", "esnext", "esnext.disposable"],
      "allowJs": true,
      "resolveJsonModule": true,
      "skipLibCheck": true,
      "esModuleInterop": true,
      "allowSyntheticDefaultImports": true,
      "strict": true,
      /* "noUncheckedIndexedAccess": true,
      "noUnusedLocals": true,
      "noUnusedParameters": true,
      "exactOptionalPropertyTypes": true, */
      "forceConsistentCasingInFileNames": true,
      "module": "esnext",
      "moduleResolution": "node",
      "declaration": true,
      "declarationMap": true,
      "noEmit": true,
      "baseUrl": ".",
      "paths": {
        "aria-ease/test": ["dist/src/utils/test/index.d.ts"],
      }
    },
    "include": ["src", "bin/cli.ts"],
    "exclude": ["node_modules", "tests", "benchmarks", "dist"]
  }